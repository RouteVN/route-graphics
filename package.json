{
  "name": "route-graphics",
  "version": "0.0.27",
  "description": "A declarative 2D graphics and sound library based on PixiJS",
  "main": "dist/RouteGraphics.js",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yuusoft-org/route-graphics.git"
  },
  "keywords": [
    "2d-graphics",
    "graphics-engine",
    "pixijs",
    "pixi",
    "rendering-engine",
    "canvas",
    "webgl",
    "game-graphics",
    "2d-rendering",
    "graphics-library"
  ],
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "lint": "bunx prettier --check src",
    "lint:fix": "bunx prettier --check --write src",
    "build": "bun run esbuild.js",
    "vt:generate": "bun run esbuild.js && rtgl vt generate --skip-screenshots",
    "vt:docker": "bun run esbuild.js && docker run --rm --user $(id -u):$(id -g) -e RTGL_VT_DEBUG=true -v \"$PWD:/app\" -w /app han4wluc/rtgl:playwright-v1.57.0-rtgl-v0.0.36 rtgl vt generate --canvas --screenshot-wait-time 15000 --concurrency 8",
    "vt:report": "bun run vt:docker && rtgl vt report",
    "vt:accept": "rtgl vt accept",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "serve": "bunx serve -p 3005 .rettangoli/vt/_site"
  },
  "dependencies": {
    "@pixi/unsafe-eval": "^7.4.3",
    "hotkeys-js": "^4.0.0-beta.7",
    "pixi.js": "^8.7.1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.8",
    "esbuild": "^0.25.6",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.6",
    "oxlint": "^1.26.0",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.44.0",
    "pngjs": "^7.0.0",
    "puty": "^0.0.5-rc1",
    "vitest": "^4.0.8"
  },
  "lint-staged": {
    "src/**/*.{js}": [
      "oxlint && bunx prettier --write"
    ]
  }
}
